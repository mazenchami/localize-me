{
  "expo": {
    "name": "localize-me",
    "slug": "localize-me",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/app-icon-all.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.mazenchami.localizeme",
      "infoPlist": {
        "CFBundleAllowMixedLocalizations": true
      },
      "icon": "./assets/images/app-icon-ios.png"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/app-icon-android-adaptive-foreground.png",
        "backgroundColor": "#DACFD8",
        "backgroundImage": "./assets/images/app-icon-android-adaptive-background.png"
      },
      "package": "com.mazenchami.localizeme",
      "icon": "./assets/images/app-icon-android-legacy.png"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/app-icon-web-favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-localization",
      ["react-native-bootsplash", { "assetsDir": "assets/images/splash" }]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "locales": {
      "en": "./i18n/locales/enNative.json",
      "ar": "./i18n/locales/arNative.json"
    },
    "autolinking": {
      "exclude": ["expo-splash-screen"]
    }
  }
}
